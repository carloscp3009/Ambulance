<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">

            <div class="card mt-5">
                <div class="card-header text-center">
                    Edit a bed
                </div>
                <div class="card-body">
                    <form action="/areas/beds/edit/{{bed.id}}" method="POST">
                        <div class="form-group text-center">
                            <p>Room</p>
                            <input type="text" name="location" class="form-control" placeholder="Location"
                                value="{{bed.location}}" autofocus>
                        </div>

                        <div class="form-group text-center">
                            <label class=" text-center">Actual Status{{statusColor bed.status}}</label>
                            <select class="form-control" name="status">
                                <option>Free</option>
                                <option>Booked</option>
                                <option>Busy</option>
                            </select>
                        </div>

                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                Save
                            </button>
                        </div>
                    </form>
                    <div class="form-group">
                        <a href="/areas/beds/{{bed.id_area}}">
                            <button class="btn btn-danger btn-block">
                                Cancel
                            </button>
                        </a>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>