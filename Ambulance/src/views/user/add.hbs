<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">

            <div class="card mt-5">
                <div class="card-header text-center">
                    Register a Patient
                </div>
                <div class="card-body">
                    <form action="/user/add" method="POST">
                        <div class="form-group">
                            <input type="text" name="cedula" class="form-control" placeholder="cedula " autofocus>
                        </div>
                        <div class="form-group">
                            <input type="text" name="name" class="form-control" placeholder="Patient Name">
                        </div>
                        <div class="form-group">
                            <input type="text" name="eps" class="form-control" placeholder="EPS">
                        </div>
                        <div class="form-group">
                            <input type="text" name="date_out" class="form-control" placeholder="date out">
                        </div>
                        <div class="form-group">
                            <label for="exampleFormControlSelect1">Area</label>
                            <select class="form-control" name="area">
                                {{#each areas}}
                                <option>{{name}}</option>
                                {{/each}}
                            </select>
                        </div>

                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                Register
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </div>
</div>