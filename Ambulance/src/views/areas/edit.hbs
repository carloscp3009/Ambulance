<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">

            <div class="card">
                <div class="card-body">
                    <form action="/areas/edit/{{area.id}}" method="POST">
                        <div class="form-group">
                            <input type="text" name="name" class="form-control" placeholder="Area Name"
                                value="{{area.name}}" autofocus>
                        </div>
                        <div class="form-group">
                            <input type="text" name="beds" class="form-control" placeholder="beds">
                        </div>

                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                Save
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </div>
</div>