<section class="container mx-auto text-center">
    <div class="card">
        <div class="card-header">
            <h1 class="text-primary"> Sign Up </h1>
            <p class="lead"><i class="fas fa-hospital"></i> Register Your Hospital</p>
        </div>
        <div class="card-body">
            <form action="/signup" method="POST" class="form-group">
                <div class="form-group">
                    <input type="text" name="hname" class="form-control" placeholder="Hospital Name" required />
                    <small class="form-text text-left">
                        User Name
                    </small>
                </div>
                <div class="form-group">
                    <input type="password" name="password" class="form-control" placeholder="Password" minlength="6" />
                </div>


                <input type="submit" value="Login" class="btn btn-primary" />
            </form>
            <p class="my-1">
                Don't have an account? <a href="/signun">Sign up</a>
            </p>
        </div>
    </div>
</section>